
.header{
	position:fixed;
	width: 100%;
	padding-bottom: 10rpx;
	border-bottom: 1rpx solid #eee;
	z-index: 9;
	background: #fff;
}
.search{
	width: 100%;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	padding: 10rpx 20rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
}
.search view:nth-child(1){
	width: 80%;
	height: 70rpx;
	background: #f1f2f6;
	margin-right: 20rpx;
	-webkit-border-radius: 10rpx;
	        border-radius: 10rpx;
}
.search view:nth-child(1) input{
	width: 100%;
	height: 100%;
	padding-left: 40rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
}
.search view:nth-child(2){
	width: 20%;
	text-align: center;
}
.search view:nth-child(2) button{
	width: 100%;
	height: 70rpx;
	line-height: 70rpx;
	margin: 0;
	font-size: 30rpx;
	color: #fff;
	background-color: #4CD964;
}
.classfiy{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	padding: 20rpx 0;
}
.classfiy view{
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
	text-align: center;
	font-size: 28rpx;
}
.classfiy view ._i{
	width: 20rpx;
	height: 20rpx;
	margin-left: 10rpx;
	margin-bottom: 5rpx;
	display: inline-block;
	vertical-align: middle;
	background: url(data:image/png;base64,);
	background-size: 100% 100%;
}
.job-info{
	padding: 20rpx;
	padding-top: 180rpx;
}
.job-model{
	position: fixed;
	left: 0;
	top: 0;
	width: 100%;
	height: 100%;
	z-index: 9999;
	background-color: rgba(0,0,0,.5);
}
.job-show{
	position: absolute;
	left: 0;
	bottom: 0;
	width: 100%;
	height: 70%;
	background: #fff;
	padding: 20rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
}
.job-title{
	text-align: center;
	padding: 20rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	font-size: 40rpx;
	background: #fff;
}
.job-title ._span{
	float: right;
	width: 50rpx;
	height: 50rpx;
}
.job-cont{
	position: absolute;
	width: 100%;
	height: 88%;
	left: 0;
	bottom: 0;
	overflow-y: scroll;
}
.job-cont-item{
	padding-bottom: 120rpx;
}
.job-item-title{
	font-weight: bold;
	padding: 20rpx;
}
.job-item-cont{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-flex-wrap: wrap;
	        flex-wrap: wrap;
	-webkit-box-pack: left;
	-webkit-justify-content: left;
	        justify-content: left;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.job-item-cont view{
	width: 27.6%;
	background: #F1F2F6;
	margin: 10rpx;
	padding:20rpx 10rpx;
	text-align: center;
	font-size: 26rpx;
	-webkit-border-radius: 10rpx;
	        border-radius: 10rpx;
	overflow: hidden;
	text-overflow:ellipsis;
	white-space: nowrap;
}
.submit{
	width: 100%;
	position: absolute;
	left: 0;
	bottom: 0;
	padding: 20rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	background: #fff;
}
.submit button{
	background: #4CD964;
	color: #fff;
}
.post-info{
	width: 100%;
	height: 100%;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
}
.post-info ._ul{
	list-style: none;
	padding: 0;
	padding-bottom: 200rpx;
}
.post-info .main-list{
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
	overflow-y: scroll;
}
.post-info ._li{
	background: #F1F2F6;
	height: 50rpx;
	padding: 20rpx 20rpx 20rpx 40rpx;
}
.post-info .aux-list{
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
	overflow-y: scroll;
}
.post-info .main-list ._li.act{
	background: #fff;
}
.post-info .aux-list ._li{
	background: #fff;
}
.post-info .aux-list ._li.act{
	color: #4CD964;
}

